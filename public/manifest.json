{
  "manifest_version": 3,
  "name": "YouTube Clip Downloader",
  "version": "1.0",
  "description": "A Chrome extension for downloading YouTube videos",
  "permissions": [
    "storage",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "index.html"
  }

}
