{
  "manifest_version": 3,
  "name": "YouTube Clip Downloader",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}